// app global css


// global

// Variables
$light = #bdbdbd
$dark = #424242
$faded = #777

// CSS3 Root Variables
:root
  --q-color-light $light
  --q-color-light-d darken($light, 10%)
  --q-color-faded $faded
  --q-color-dark $dark

// CSS Classes
.text-faded
  color $faded !important
  color var(--q-color-faded) !important
.bg-faded
  background $faded !important
  background var(--q-color-faded) !important

.text-light
  color $light !important
  color var(--q-color-light) !important
.bg-light
  background $light !important
  background var(--q-color-light) !important

.text-dark
  color $dark !important
  color var(--q-color-dark) !important
.bg-dark
  background $dark !important
  background var(--q-color-dark) !important

.text-faded
  color $faded !important
  color var(--q-color-faded) !important
.bg-faded
  background $faded !important
  background var(--q-color-faded) !important


// application

body
  background-color: $grey-2


.page

  background-color: $grey-2
  overflow: auto
  margin: auto

  .page-block
    background-color white
    margin-top $flex-gutter-md

  .page-block:last-child
    margin-bottom: $flex-gutter-md

  .page-block-transparent
    background-color inherit

  .page-block-padding
    padding: $space-base


  & .page-block
    margin-left: 0
    margin-right: 0

  @media (min-width: $breakpoint-xs)
    & .page-block
      width: 90%
      margin-left: auto
      margin-right: auto

    &.page-width-sm
      & .page-block
        max-width: 600px

    &.page-width-md
      & .page-block
        max-width: 1024px

    &.page-width-lg
      & .page-block
        max-width: 1439px

.page-fit
  position: absolute;
  width: 100% !important;
  height: 100% !important;

  &:not(.page-fit-no-padding)
    @media (min-width: $breakpoint-xs)
      padding: 8px 8px;

  .page-block
    background-color white
    border-radius 3px
    box-shadow 0 1px 5px rgba(0,0,0,0.2), 0 2px 2px rgba(0,0,0,0.14), 0 3px 1px -2px rgba(0,0,0,0.12)


a
  color: $primary;
  text-decoration: none

  &:focus, &:hover
    color: $secondary;
    text-decoration: underline

  &:focus
    outline: thin dotted;
    outline: 5px auto -webkit-focus-ring-color;
    outline-offset: -2px



.markdown

  code
    padding: 2px 4px;
    font-size: 90%;
    color: #c7254e;
    background-color: #f9f2f4;
    border-radius: 4px;

  pre
    display: block;
    padding: 9.5px;
    margin: 0 0 10px;
    font-size: 13px;
    line-height: 1.42857143;
    color: #333;
    word-break: break-all;
    word-wrap: break-word;
    background-color: #f5f5f5;
    border: 1px solid #ccc;
    border-radius: 4px;

    code
      padding: 0;
      font-size: inherit;
      color: inherit;
      white-space: pre-wrap;
      background-color: transparent;
      border-radius: 0;

  mark
    padding: .2em;
    background-color: #fcf8e3;

  hr
    margin-top: 20px;
    margin-bottom: 20px;
    border: 0;
    border-top: 1px solid #eee;

  table
    width: 100%;
    max-width: 100%;
    margin-bottom: 20px;
    border-spacing: 0;
    border-collapse: collapse;

    th
      text-align: left;

    td, th
      padding: 8px;
      line-height: 1.42857143;

    thead>tr>th
      vertical-align: bottom;
      border-bottom: 2px solid #ddd;

  a
    color: $primary;
    text-decoration: none

    &:focus, &:hover
      color: $secondary;
      text-decoration: underline

    &:focus
      outline: thin dotted;
      outline: 5px auto -webkit-focus-ring-color;
      outline-offset: -2px

  blockquote ol:last-child,blockquote p:last-child,blockquote ul:last-child
    margin-bottom: 0

  .footnotes
    -moz-column-count: 2;
    -webkit-column-count: 2;
    column-count: 2

  .footnotes-list
    padding-left: 2em

  ol, ul
    margin-top: 0;
    margin-bottom: 10px;

  p:last-child
    margin-bottom: 0px;
