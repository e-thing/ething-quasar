// app global css


// global

// Variables
$light = #bdbdbd
$dark = #424242
$faded = #777

// CSS3 Root Variables
:root
  --q-color-light $light
  --q-color-light-d darken($light, 10%)
  --q-color-faded $faded
  --q-color-dark $dark

// CSS Classes
.text-faded
  color $faded !important
  color var(--q-color-faded) !important
.bg-faded
  background $faded !important
  background var(--q-color-faded) !important

.text-light
  color $light !important
  color var(--q-color-light) !important
.bg-light
  background $light !important
  background var(--q-color-light) !important

.text-dark
  color $dark !important
  color var(--q-color-dark) !important
.bg-dark
  background $dark !important
  background var(--q-color-dark) !important

.text-faded
  color $faded !important
  color var(--q-color-faded) !important
.bg-faded
  background $faded !important
  background var(--q-color-faded) !important


// application

body
  background-color: $grey-2


.page

  background-color: $grey-2
  overflow: auto
  margin: auto

  .page-block
    background-color white
    margin-top $flex-gutter-md

  .page-block:last-child
    margin-bottom: $flex-gutter-md

  .page-block-transparent
    background-color inherit

  .page-block-padding
    padding: $space-base


  & .page-block
    margin-left: 0
    margin-right: 0

  @media (min-width: $breakpoint-xs)
    & .page-block
      width: 90%
      margin-left: auto
      margin-right: auto

    &.page-width-sm
      & .page-block
        max-width: 600px

    &.page-width-md
      & .page-block
        max-width: 1024px

    &.page-width-lg
      & .page-block
        max-width: 1439px

.page-fit
  position: absolute;
  width: 100% !important;
  height: 100% !important;

  &:not(.page-fit-no-padding)
    @media (min-width: $breakpoint-xs)
      padding: 8px 8px;

  .page-block
    background-color white
    border-radius 3px
    box-shadow 0 1px 5px rgba(0,0,0,0.2), 0 2px 2px rgba(0,0,0,0.14), 0 3px 1px -2px rgba(0,0,0,0.12)


.q-markdown

  p:last-child
    margin-bottom: 0px;

a
    color: #027be3;
    font-weight: 500;
    text-decoration: none;
    outline: 0;
    border-bottom: 1px dotted currentColor;
    text-align: center;
    transition: opacity 0.2s;
    white-space: nowrap;
